{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "boards": {
      "$boardId": {
        ".read": "auth != null && (data.child('owner').val() === auth.uid || data.child('members').child(auth.uid).exists())",
        ".write": "auth != null && (data.child('owner').val() === auth.uid || !data.exists())"
      }
    }
  }
}

